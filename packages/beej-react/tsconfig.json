{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2020",
    "lib": ["es6", "DOM"],
    "moduleResolution": "Bundler",
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["cli"],
  "exclude": ["node_modules", "dist", ".github"]
}
